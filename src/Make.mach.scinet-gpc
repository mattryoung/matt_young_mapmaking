#----------------------------------------------------------------------
# OPTIONS FOR RUNNING ON SCINET-GPC MACHINES
#----------------------------------------------------------------------

F90 = mpif90
F77 = mpif77
OPTIMIZE =  -O4 -w -mcmodel=large -shared-intel 
FFTWOMP = -lfftw3f_omp
MODFLAG = -module 
OMPLIB = -openmp

CC = mpicc
C++ = mpiCC
CCOPTIMIZE = -w 

